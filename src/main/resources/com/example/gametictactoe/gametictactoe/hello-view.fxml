<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="318.0" prefWidth="484.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gametictactoe.gametictactoe.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Player vs Computer">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <HBox alignment="CENTER">
        <Label text="Score: 0 - 0">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
    </HBox>

    <GridPane prefHeight="98.0" prefWidth="460.0">
        <!-- Tic-Tac-Toe game board cells -->
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button onAction="#cellClicked" text="" GridPane.columnIndex="2" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <ButtonBar prefHeight="30.0" prefWidth="460.0" VBox.vgrow="ALWAYS">
        <buttons>
            <Button minWidth="0.0" onAction="#restartGame" prefHeight="0.0" text="Restart">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
            <Button onAction="#newGame" text="New Game">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
            <Button onAction="#deleteGame" text="Delete">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
        </buttons>
    </ButtonBar>



</VBox>
